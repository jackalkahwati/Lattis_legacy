<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:padding="15dp" >

    <ImageView
        android:id="@+id/ivCrashAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/crash_alert_inactive"/>

    <TextView
        android:id="@+id/tvCrashAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skylock Crash Alert"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_toRightOf="@+id/ivCrashAlert"/>

    <TextView
        android:id="@+id/tvCrashLevel"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ignore this or get some help"
        android:textSize="10dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/ivCrashAlert"/>

    <ImageView
        android:id="@+id/ivTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/timer_icon"
        android:layout_marginEnd="9dp"
        android:layout_alignBottom="@+id/tvTimer"
        android:layout_toStartOf="@+id/tvTimer" />

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30s"
        android:layout_marginEnd="16dp"
        android:layout_alignBaseline="@+id/tvCrashLevel"
        android:layout_alignBottom="@+id/tvCrashLevel"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tvTimeCrash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03:00 PM"
        android:layout_marginRight="5dp"
        android:layout_alignBaseline="@+id/tvCrashAlert"
        android:layout_alignBottom="@+id/tvCrashAlert"
        android:layout_toEndOf="@+id/tvCrashAlert"
        android:layout_marginStart="5dp" />

    <ImageButton
        android:id="@+id/bIgnore"
        android:background="@null"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ignore_btn"
        android:layout_below="@+id/ivCrashAlert"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/bHelp"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/help_btn"
        android:layout_below="@+id/tvCrashLevel"
        android:layout_alignTop="@+id/bIgnore"
        android:layout_alignParentEnd="true"
         />

</RelativeLayout>
