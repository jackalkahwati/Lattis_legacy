<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/rlUserPic"
        android:layout_width="70dp"
        android:layout_height="70dp"
       >
    <com.facebook.login.widget.ProfilePictureView
        android:id="@+id/ivFBFriendPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />
    <ImageView
        android:id="@+id/icon_mask"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/circle"
        >
    </ImageView>
    </RelativeLayout>


    <TextView
        android:id="@+id/tvUserName"
        android:layout_marginTop="11.25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/rlUserPic"
        android:layout_marginLeft="25dp"
        android:text="Jesse Becker"
        />

    <ImageButton
        android:id="@+id/ibSharingToggle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:tag="inactive"
        android:src="@drawable/sharing_off"/>

</RelativeLayout>
