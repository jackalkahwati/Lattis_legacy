<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fb_bg"
    tools:context=".FbActivityFragment"
    >

    <ImageView
        android:src="@drawable/fb_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/ivFblogo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's get started!"
        android:textSize="20dp"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/ivFblogo"
        android:layout_centerHorizontal="true" android:id="@+id/textView5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login with your existing facebook account"
        android:textSize="10dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/login_button"
        android:layout_marginBottom="10dp" android:id="@+id/textView7"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_below="@+id/login_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvOR"
        android:text="OR"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_button"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
         />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibLoginPhone"
        android:background="@null"
        android:layout_centerHorizontal="true"
        android:src="@drawable/login_phone_number"
        android:layout_below="@+id/tvOR"
        />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Not an user already? Sign Up"
            android:id="@+id/tvSignup"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="35dp"
            android:textColor="@drawable/onclickcolor"
            android:clickable="true"
            android:layout_alignEnd="@+id/textView7"/>

</RelativeLayout>