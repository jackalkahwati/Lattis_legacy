<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:padding="15dp" >

    <ImageView
        android:id="@+id/ivTheftAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/theft_alert_active"/>

    <TextView
        android:id="@+id/tvTheftAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skylock Theft Alert"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_toRightOf="@+id/ivTheftAlert"/>

    <TextView
        android:id="@+id/tvTheftLevel"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Threat"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/ivTheftAlert"/>

    <TextView
        android:id="@+id/tvTimeTheft"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03:00 PM"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/tvTheftAlert"/>

</RelativeLayout>
