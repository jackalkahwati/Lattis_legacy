        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rl_damage"
            android:layout_below="@+id/iv_navigate"
            android:src="@drawable/icon_report_damage"
            android:layout_toEndOf="@+id/iv_navigate"
            >

            <ImageView
                android:id="@+id/iv_report_damage_oval"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="@null"
                android:layout_centerInParent="true"
                android:src="@drawable/oval_theft_damage"
                />
            <ImageView
                android:id="@+id/iv_report_damage_icon"
                android:layout_margin="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:contentDescription="@null"
                android:src="@drawable/icon_damage"
                />

            <io.bikes.sandypedals.presentation.view.CustomTextView
                android:id="@+id/cv_report_damage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/active_ride_menu_report_damage"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/iv_report_damage_icon"
                android:textColor="#ffffff"
                android:textSize="8dp"
                android:lines="2"
                />

        </RelativeLayout>

