<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <io.bikes.sandypedals.presentation.view.CustomTextView
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAllCaps="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/lattis_header_color"
        android:visibility="gone"
        custom:typefaceAsset="SanFranciscoDisplay-Regular.otf" />

    <LinearLayout
        android:id="@+id/ll_currentLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="4">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_gravity="center|start"
            android:layout_margin="2dp"
            android:layout_weight=".5"
            android:src="@drawable/shape_ring" />

        <io.bikes.sandypedals.presentation.view.CustomTextView
            android:id="@+id/toolbar_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="3.48"
            android:background="@android:color/transparent"
            android:hint="@string/find_ride_current_location"
            android:inputType="textPostalAddress"
            android:maxLines="1"
            android:minWidth="200dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#818181"
            custom:typefaceAsset="SanFranciscoDisplay-Regular.otf" />

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_down_arrow" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginRight="-12dp"
            android:paddingLeft="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/shape_vertical_dashed_line" />




    </LinearLayout>

</LinearLayout>