<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_semi_transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >

        <io.bikes.sandypedals.presentation.view.CustomTextView
            android:id="@+id/cv_title_pop_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="@string/ride_out_of_bound_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/lattis_toolbar_bg"
            custom:typefaceAsset="SanFranciscoDisplay-Regular.otf" />

        <RelativeLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_below="@+id/cv_title_pop_up"
            android:background="@android:color/white"/>


        <io.bikes.sandypedals.presentation.view.CustomTextView
            android:id="@+id/cv_subtitle1_pop_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/lattis_toolbar_bg"
            custom:typefaceAsset="SanFranciscoDisplay-Regular.otf" />


        <io.bikes.sandypedals.presentation.view.CustomTextView
            android:id="@+id/cv_subtitle2_pop_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cv_subtitle1_pop_up"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:gravity="center"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/lattis_toolbar_bg"
            custom:typefaceAsset="SanFranciscoDisplay-Regular.otf" />


        <RelativeLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_below="@+id/cv_subtitle2_pop_up"
            android:layout_marginTop="20dp"
            android:background="@android:color/white"></RelativeLayout>

        <io.bikes.sandypedals.presentation.view.CustomButton
            android:id="@+id/cv_action_btn_pop_up"
            style="@style/BlueButtonStyle.Inversed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="@string/ok"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            custom:typefaceAsset="SanFranciscoDisplay-Regular.otf" />



        <io.bikes.sandypedals.presentation.view.CustomTextView
            android:id="@+id/cv_action_btn_pop_up2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/cv_action_btn_pop_up"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="@string/ride_out_of_bound_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/lattis_accent_color"
            custom:typefaceAsset="SanFranciscoDisplay-Regular.otf" />


    </RelativeLayout>
</RelativeLayout>
