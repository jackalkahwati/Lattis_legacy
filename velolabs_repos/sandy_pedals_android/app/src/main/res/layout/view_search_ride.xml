<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_find_bike_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99FFFFFF"
    android:clickable="true"
    android:visibility="visible">

    <LinearLayout
        android:id="@+id/ll_map_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_with_grey_shadow"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:background="@color/lattis_view_loction_bg"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:src="@drawable/shape_ring" />

            <io.bikes.sandypedals.presentation.view.CustomTextView
                android:id="@+id/et_currentlocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:layout_weight="3"
                android:background="@android:color/transparent"
                android:hint="@string/find_ride_current_location"
                android:inputType="textPostalAddress"
                android:maxLines="1"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#818181"
                custom:typefaceAsset="SanFranciscoDisplay-Regular.otf" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="#979797"
                android:layout_gravity="center_vertical"
                android:orientation="vertical" />

            <ImageView
                android:id="@+id/iv_qrCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:src="@drawable/ic_qr_code" />

        </LinearLayout>

        <io.bikes.sandypedals.presentation.view.CustomButton
            android:id="@+id/button_findbike"
            style="@style/blueButtonStyle.rect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/label_button_find_ride"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <RelativeLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="#44979797"></RelativeLayout>

    </LinearLayout>




    </RelativeLayout>
