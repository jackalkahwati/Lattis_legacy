<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="3dp"/>
            <gradient
                android:startColor="#B7C1CD"
                android:centerColor="#B7C1CD"
                android:centerY="0.75"
                android:endColor="#B7C1CD"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="3dp"/>
                <gradient
                    android:startColor="#00AAD1"
                    android:centerColor="#00AAD1"
                    android:centerY="0.75"
                    android:endColor="#00AAD1"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="3dp"/>
                <gradient
                    android:startColor="#00AAD1"
                    android:centerColor="#00AAD1"
                    android:centerY="0.75"
                    android:endColor="#00AAD1"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

</layer-list>
