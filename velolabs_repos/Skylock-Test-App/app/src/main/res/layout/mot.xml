<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >
    
    
        	<TextView
        	    android:layout_marginLeft="20dp"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:layout_marginTop="10dp"
        	       android:text="LOCK ADJUST" />
        	
        	<Button
        	    android:id="@+id/bStartTest"
        	    android:layout_marginLeft="20dp"
        	    android:layout_marginTop="50dp"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:text="ADJUST">
        	    
        	</Button>
        	
        	<TextView
        	    android:id="@+id/tvStartTest"
        	    android:layout_marginLeft="20dp"
        	    android:layout_marginTop="50dp"
        	    android:layout_below="@+id/bStartTest"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:text="Enter From 0 to 255">
        	    
        	</TextView>
        	
        	<EditText
        	    android:id="@+id/etStartTest2"
        	    android:layout_marginLeft="20dp"
        	    android:layout_marginTop="50dp"
        	    android:layout_toRightOf="@+id/bStartTest"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:hint="Enter Values here ">
        	    
        	</EditText>

        	<TextView
        	    android:id="@+id/tvStartTest1"
        	    android:layout_marginRight="20dp"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:layout_alignBottom="@+id/tvStartTest"
        	    android:layout_alignParentRight="true"
        	    android:text="" />

</RelativeLayout>
