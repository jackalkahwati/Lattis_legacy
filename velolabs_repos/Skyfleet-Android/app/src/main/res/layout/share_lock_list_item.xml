<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_share_connection_list"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/rl_header"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:visibility="visible">
        <ImageView
            android:contentDescription="@null"
            android:tag="0"
            android:layout_width="25dp"
            android:layout_height="70dp"
            android:id="@+id/iv_share_lock_icon"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/not_selected_oval"
            />

        <TextView
            android:id="@+id/tv_share_lockName"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:paddingStart="30dp"
            android:layout_toRightOf="@+id/iv_share_lock_icon"
            android:text="@string/ellipse_not_connected"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/ellipses_text_color"
            android:textSize="18sp" />
        <TextView
            android:layout_below="@+id/tv_share_lockName"
            android:id="@+id/tv_share_lockNumber"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:paddingStart="30dp"
            android:layout_toRightOf="@+id/iv_share_lock_icon"
            android:text=""
            android:layout_centerVertical="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/non_selected_circle_icon"
            android:textSize="18sp" />


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_connection_list"
        android:background="#DEDEDE" />
</RelativeLayout>
