<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_contentlayout"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_titile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center"
            android:text="We've found the following Ellipses"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#829CB2" />



        <ListView
            android:id="@+id/scannedLockList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_titile"
            android:layout_marginTop="12dp"
            android:background="@android:color/transparent"
            android:divider="@null"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone">

        </ListView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_progress">


        <cc.skylock.skylock.ui.UiUtils.RippleBackground
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/content"
            app:rb_color="@color/ripplecolor"
            app:rb_radius="32dp"
            app:rb_rippleAmount="6"
            app:rb_duration="3000"
            app:rb_scale="6"
            android:layout_centerInParent="true"
           />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/addlock1_description1"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"
            android:layout_above="@+id/tv_description_2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/walkthrough_description" />




        <TextView
            android:id="@+id/tv_description_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_above="@+id/tv_description_1"
            android:text="@string/addlock2_description3"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/tv_description_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:paddingTop="16dp"
                android:paddingBottom="32dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginBottom="8dp"
                android:text="@string/addlock2_description2"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorAccent" />
        </RelativeLayout>
</RelativeLayout>


