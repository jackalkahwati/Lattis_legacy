<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textView_sharing_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:padding="16dp"
        android:text="@string/success"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/ellipses_text_color" />

    <TextView
        android:id="@+id/textView_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Youʼve accepted the invitation and can begin sharing Andreaʼs Main Ellipse as soon as you are within range of it."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/ellipses_text_color"
        android:layout_below="@+id/textView_sharing_status"
        android:textSize="14sp"
        android:layout_centerHorizontal="true" />
    <android.support.v7.widget.CardView
        android:id="@+id/cv_connect_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="@color/colorAccent"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="1dp">

        <TextView
            android:id="@+id/textView_connect_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/share_connect_now"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_connect_later"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv_connect_now"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="#F1F1F1"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="1dp">

        <TextView
            android:id="@+id/textView_connect_later"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/share_connect_later"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/ellipses_text_color" />
    </android.support.v7.widget.CardView>



</RelativeLayout>