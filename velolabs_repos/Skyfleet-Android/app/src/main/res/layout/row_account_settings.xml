<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_emailaddress"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/view3"
    android:background="@android:color/white"
    >

    <RelativeLayout
        android:id="@+id/rl_row_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_label_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/ellipses_text_color" />

        <ImageView
            android:contentDescription="@null"
            android:id="@+id/tv_image_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_share_arrow"

            />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_row_content"
        android:background="@color/divider_settings"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/lineview"
        android:visibility="visible" />
</RelativeLayout>
