<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/confirm_reserve_semi_transparent_background"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:layout_constraintTop_toTopOf="parent"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="20dp"
        android:background="@drawable/round_pop_up_card">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:id="@+id/iv_sentinel_close_pop_up"
            custom:layout_constraintTop_toTopOf="parent"
            custom:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            android:layout_marginRight="5dp"/>

        <com.lattis.lattis.presentation.customview.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:layout_constraintTop_toBottomOf="@+id/iv_sentinel_close_pop_up"
            custom:layout_constraintStart_toStartOf="parent"
            custom:layout_constraintEnd_toEndOf="parent"
            android:textSize="24dp"
            android:text="@string/unlocking"
            android:textColor="@color/pop_up_text"
            android:gravity="center"
            android:id="@+id/pop_up_title"
            custom:typefaceAsset="GothamSSm-Book.otf"/>


        <com.lattis.lattis.presentation.customview.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:layout_constraintTop_toBottomOf="@id/pop_up_title"
            custom:layout_constraintStart_toStartOf="parent"
            custom:layout_constraintEnd_toEndOf="parent"
            android:textSize="16dp"
            android:text="@string/sentinel_tap_lock_label"
            android:layout_marginTop="20dp"
            android:textColor="@color/pop_up_text"
            android:gravity="center"
            android:id="@+id/pop_up_sub_title1"
            custom:typefaceAsset="GothamSSm-Book.otf"/>




    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
