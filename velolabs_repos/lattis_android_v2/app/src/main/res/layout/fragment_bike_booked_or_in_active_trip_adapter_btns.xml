<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/bike_card_bottom_radius"
    android:elevation="5dp">


    <com.lattis.lattis.presentation.customview.CustomTextView
        android:id="@+id/btn_cancel_reserve_in_bike_booked_adapter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        custom:layout_constraintTop_toTopOf="@id/cl_scan_adapter"
        custom:layout_constraintHorizontal_weight="1"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintBottom_toBottomOf="@id/cl_scan_adapter"
        custom:layout_constraintEnd_toStartOf="@id/cl_scan_adapter"
        android:gravity="center"
        android:textSize="14dp"
        custom:typefaceAsset="GothamSSm-Medium.otf"
        android:orientation="vertical"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textColor="@color/cancel_in_bike_booked_text"
        android:text="@string/cancel"
        >


    </com.lattis.lattis.presentation.customview.CustomTextView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_scan_adapter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        custom:layout_constraintTop_toTopOf="parent"
        custom:layout_constraintHorizontal_weight="2"
        custom:layout_constraintStart_toEndOf="@+id/btn_cancel_reserve_in_bike_booked_adapter"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:background="@drawable/round_scan_iot_or_adapter"
        >

        <com.lattis.lattis.presentation.customview.CustomTextView
            android:id="@+id/ct_begin_trip_in_adapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:layout_constraintTop_toTopOf="parent"
            custom:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textSize="16dp"
            custom:typefaceAsset="GothamSSm-Medium.otf"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/booking_begin_trip"
            android:textColor="@color/find_bike_scan_text"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>