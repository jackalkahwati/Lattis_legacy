<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/iv_fleet_image_in_private_fleet_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toEndOf="@+id/iv_fleet_image_in_private_fleet_item"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/cl_name_email_in_private_fleets_item"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    <com.lattis.lattis.presentation.customview.CustomTextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="5dp"
        android:id="@+id/ct_fleet_name_in_private_fleets_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/payment_text"
        app:typefaceAsset="GothamSSm-Book.otf"
        />

        <com.lattis.lattis.presentation.customview.CustomTextView
            app:layout_constraintTop_toBottomOf="@+id/ct_fleet_name_in_private_fleets_item"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="5dp"
            android:id="@+id/ct_fleet_email_in_private_fleets_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textColor="@color/payment_text"
            app:typefaceAsset="GothamSSm-Book.otf"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_next_in_private_fleet_item"
        android:visibility="gone"
        android:padding="10dp"
        android:src="@drawable/next_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="20dp"
        />


    <View
        android:id="@+id/divider_in_private_fleets_item"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/private_fleets_divider"
        app:layout_constraintTop_toBottomOf="@+id/cl_name_email_in_private_fleets_item" />



</androidx.constraintlayout.widget.ConstraintLayout>