<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/bike_card_bottom_radius"
    android:elevation="5dp">


    <com.lattis.lattis.presentation.customview.CustomTextView
        android:id="@+id/btn_cancel_reserve_in_bike_booked"
        android:layout_width="0dp"
        android:layout_height="0dp"
        custom:layout_constraintTop_toTopOf="@id/cl_animating"
        custom:layout_constraintHorizontal_weight="1"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintBottom_toBottomOf="@id/cl_animating"
        custom:layout_constraintEnd_toStartOf="@+id/cl_animating"
        android:gravity="center"
        android:textSize="14dp"
        custom:typefaceAsset="GothamSSm-Medium.otf"
        android:orientation="vertical"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textColor="@color/cancel_in_bike_booked_text"
        android:text="@string/cancel"
        >


    </com.lattis.lattis.presentation.customview.CustomTextView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cl_animating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        custom:layout_constraintTop_toTopOf="parent"
        custom:layout_constraintHorizontal_weight="2"
        custom:layout_constraintStart_toEndOf="@+id/btn_cancel_reserve_in_bike_booked"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        custom:cardElevation="0dp"
        custom:cardCornerRadius="22dp"
         >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/begin_trip_grey_in_bike_booked_background">


        <View
            android:id="@+id/view_animating"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            custom:layout_constraintTop_toTopOf="@id/tv_animating"
            custom:layout_constraintBottom_toBottomOf="@id/tv_animating"
            custom:layout_constraintStart_toStartOf="@id/tv_animating"
            custom:layout_constraintEnd_toEndOf="@id/tv_animating"
            />

        <com.lattis.lattis.presentation.customview.CustomTextView
            android:id="@+id/tv_animating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:layout_constraintTop_toTopOf="parent"
            custom:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textSize="16dp"
            custom:typefaceAsset="GothamSSm-Medium.otf"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/walk_to_bike_label"
            android:textColor="@color/begin_trip_grey_in_bike_booked_text"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

