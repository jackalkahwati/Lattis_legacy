<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_card_list_item"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    >

    <com.lattis.lattis.presentation.customview.CustomTextView
        custom:layout_constraintTop_toTopOf="parent"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintStart_toStartOf="parent"
        android:id="@+id/ct_fleet_name_in_payment_promotions_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/promotion_text"
        custom:typefaceAsset="GothamSSm-Book.otf"
        />

    <com.lattis.lattis.presentation.customview.CustomTextView
        custom:layout_constraintTop_toTopOf="parent"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/ct_discount_description_in_payment_promotions_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/promotion_description_text"
        android:background="@drawable/round_promotion_description"
        custom:typefaceAsset="GothamSSm-Book.otf"
        />

</androidx.constraintlayout.widget.ConstraintLayout>