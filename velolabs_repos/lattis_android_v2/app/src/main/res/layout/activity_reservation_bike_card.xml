<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">



        <com.lattis.lattis.presentation.customview.CustomTextView
            custom:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/ct_bike_type_in_reservation_bike_card"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textAllCaps="false"
            android:textColor="@color/reservation_text"
            custom:typefaceAsset="GothamSSm-Bold.otf"
            />


        <com.lattis.lattis.presentation.customview.CustomTextView
            app:layout_constraintTop_toBottomOf="@+id/ct_bike_type_in_reservation_bike_card"
            app:layout_constraintStart_toStartOf="parent"
            custom:layout_constraintEnd_toStartOf="@+id/iv_bike_image_in_reservation_bike_card"
            android:id="@+id/ct_bike_name_in_reservation_reservation_bike_card"
            android:text="Serpent Eagle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/reservation_text"
            custom:typefaceAsset="GothamSSm-Bold.otf"
            android:layout_marginTop="3dp" />


        <com.lattis.lattis.presentation.customview.CustomTextView
            app:layout_constraintTop_toBottomOf="@+id/ct_bike_name_in_reservation_reservation_bike_card"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/ct_fleet_name_in_reservation_reservation_reservation_bike_card"
            android:text="Serpent Eagle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/bike_fleet_company_name"
            custom:typefaceAsset="GothamSSm-Book.otf"
            android:layout_marginTop="3dp" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/iv_bike_image_in_reservation_bike_card"
        custom:layout_constraintTop_toTopOf="@+id/ct_bike_type_in_reservation_bike_card"
        custom:layout_constraintBottom_toBottomOf="@+id/ct_fleet_name_in_reservation_reservation_reservation_bike_card"
        custom:layout_constraintEnd_toEndOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>