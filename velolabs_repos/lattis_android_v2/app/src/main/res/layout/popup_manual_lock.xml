<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/manual_lock_popup_transparent_background"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:layout_constraintTop_toTopOf="parent"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="20dp"
        android:background="@drawable/round_manual_lock_visible">

        <com.lattis.lattis.presentation.customview.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:layout_constraintTop_toTopOf="parent"
            custom:layout_constraintStart_toStartOf="parent"
            custom:layout_constraintEnd_toEndOf="parent"
            android:textSize="24dp"
            android:textColor="@color/manual_lock_popup_text"
            android:gravity="center"
            android:id="@+id/cv_title"
            android:text="@string/enter_code_on_lock"
            custom:typefaceAsset="GothamSSm-Book.otf"/>


        <com.lattis.lattis.presentation.customview.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            custom:layout_constraintTop_toBottomOf="@+id/cv_title"
            custom:layout_constraintStart_toStartOf="parent"
            custom:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="48dp"
            android:textColor="@color/manual_lock_popup_text"
            android:gravity="center"
            android:id="@+id/cv_code"
            android:padding="20dp"
            android:background="@drawable/round_manual_lock_code"
            custom:typefaceAsset="GothamSSm-Book.otf"/>


        <com.lattis.lattis.presentation.customview.CustomButton
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            custom:layout_constraintStart_toStartOf="parent"
            custom:layout_constraintEnd_toEndOf="parent"
            custom:layout_constraintTop_toBottomOf="@+id/cv_code"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/general_btn_ok"
            android:textSize="16dp"
            android:textAllCaps="false"
            android:background="@drawable/round_manual_lock_popup_btn"
            android:textColor="@color/manual_lock_popup_btn_text"
            custom:typefaceAsset="GothamSSm-Medium.otf" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>