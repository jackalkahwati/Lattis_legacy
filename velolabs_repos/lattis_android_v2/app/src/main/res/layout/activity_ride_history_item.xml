<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:paddingTop="20dp">

    <com.lattis.lattis.presentation.customview.CustomTextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ct_fleet_name_in_ride_history_item"
        app:layout_constraintBottom_toBottomOf="@+id/ct_fleet_name_in_ride_history_item"
        android:id="@+id/ct_date_in_ride_history_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="@color/ride_history_text"
        custom:typefaceAsset="GothamSSm-Medium.otf"
        />


    <com.lattis.lattis.presentation.customview.CustomTextView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/ct_fleet_name_in_ride_history_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/ride_history_text"
        custom:typefaceAsset="GothamSSm-Book.otf"
        />




    <com.lattis.lattis.presentation.customview.CustomTextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ct_cost_in_ride_history_item"
        app:layout_constraintBottom_toBottomOf="@+id/ct_cost_in_ride_history_item"
        android:id="@+id/ct_duration_in_ride_history_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="@color/ride_history_text"
        custom:typefaceAsset="GothamSSm-Medium.otf"
        />


    <com.lattis.lattis.presentation.customview.CustomTextView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ct_fleet_name_in_ride_history_item"
        android:id="@+id/ct_cost_in_ride_history_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="24dp"
        android:textColor="@color/ride_history_text"
        custom:typefaceAsset="GothamSSm-Book.otf"
        />

    <View
        android:id="@+id/divider_in_ride_history_item"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/ride_summary_divider"
        app:layout_constraintTop_toBottomOf="@+id/ct_cost_in_ride_history_item" />

</androidx.constraintlayout.widget.ConstraintLayout>