<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:id="@+id/rl_no_internet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/no_internet_semitransparent_background"
    android:visibility="visible">



    <com.lattis.lattis.presentation.customview.CustomTextView
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/tv_no_internet_text"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/no_internet_round"
        android:text="@string/internet_is_required_in_ride"
        android:textSize="16dp"
        android:textColor="@color/no_internet_text"
        app:typefaceAsset="GothamSSm-Book.otf"
        />

</androidx.constraintlayout.widget.ConstraintLayout>