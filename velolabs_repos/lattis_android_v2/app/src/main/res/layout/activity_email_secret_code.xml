    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:id="@+id/view_flipper_in_secret_code">
        <include layout="@layout/activity_email_secret_code_email" />
        <include layout="@layout/activity_email_secret_code_verification"/>
    </ViewFlipper>



    <include layout="@layout/activity_loading"
        android:id="@+id/secret_code_activity_loading_view"
        android:visibility="gone"/>

    <include layout="@layout/no_internal_layout"/>
</androidx.constraintlayout.widget.ConstraintLayout>