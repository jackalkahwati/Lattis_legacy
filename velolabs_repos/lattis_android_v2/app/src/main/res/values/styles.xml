    <style name="progressBarStyle" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateDrawable">@drawable/custom_loading</item>
    </style>


    <style name="spinnerTheme" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>
        <item name="android:dropDownItemStyle">@style/spinnerItemStyle</item>
    </style>
    
