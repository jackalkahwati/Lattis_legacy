<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_semi_transparent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_close_white" />

    <com.lattis.ellipse.presentation.view.CustomTextView
        android:id="@+id/label_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/line1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:text="@string/notice"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/lattis_toolbar_bg"
        android:textStyle="bold"
        custom:typefaceAsset="SanFranciscoDisplay-Regular.otf" />

    <RelativeLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/label"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@android:color/white" />


    <com.lattis.ellipse.presentation.view.CustomTextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/label1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:text="@string/find_ride_no_service_subtitle"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/lattis_toolbar_bg"
        custom:typefaceAsset="SanFranciscoDisplay-Regular.otf" />

    <com.lattis.ellipse.presentation.view.CustomTextView
        android:id="@+id/label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/line"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:text="@string/add_private_fleet_label"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/lattis_toolbar_bg"
        custom:typefaceAsset="SanFranciscoDisplay-Regular.otf" />


    <RelativeLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@android:color/white"
        android:paddingTop="16dp" />

    <com.lattis.ellipse.presentation.view.CustomButton
        android:id="@+id/add_private_fleet"
        style="@style/BlueButtonStyle.Inversed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="50dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/find_ride_no_service_action"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        custom:typefaceAsset="SanFranciscoDisplay-Regular.otf" />


    <com.lattis.ellipse.presentation.view.CustomButton
        android:id="@+id/cancel_action"
        style="@style/BlueButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_private_fleet"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/lock_position_error_pop_ok"
        android:textAllCaps="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        custom:typefaceAsset="SanFranciscoDisplay-Regular.otf" />

    <include layout="@layout/no_internal_layout"/>


</RelativeLayout>