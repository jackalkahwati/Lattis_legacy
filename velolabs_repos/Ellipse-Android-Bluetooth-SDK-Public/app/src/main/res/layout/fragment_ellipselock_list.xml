<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_scan_ellipse_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="20dp"
        android:text="@string/scan_ellipse_instruction"
        />

<androidx.recyclerview.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recyclerView"
    android:name="com.ellipse.ellipsesdkdemo.ScanEllipseFragment"
    android:layout_width="match_parent"
    android:layout_below="@+id/tv_scan_ellipse_instruction"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    app:layoutManager="LinearLayoutManager"
    tools:context="com.ellipse.ellipsesdkdemo.ScanEllipseFragment"
    tools:listitem="@layout/fragment_ellipselock" />


</RelativeLayout>