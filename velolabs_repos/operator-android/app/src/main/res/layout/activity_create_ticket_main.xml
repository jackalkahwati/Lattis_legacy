<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:background="@drawable/round_vehicle_detail_box"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto">



<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:id="@+id/cl_create_ticket_vehicle"
    >

    <io.lattis.operator.presentation.customview.CustomTextView
        android:id="@+id/ct_create_ticket_vehicle_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vehicle"
        android:textSize="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        custom:typefaceAsset="GothamSSm-Medium.otf" />
    <io.lattis.operator.presentation.customview.CustomTextView
        android:id="@+id/ct_create_ticket_vehicle_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/vehicle_box_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        custom:typefaceAsset="GothamSSm-Bold.otf" />
    <View
        android:id="@+id/divider_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/vehicle_box_divider"
        custom:layout_constraintTop_toBottomOf="@+id/ct_create_ticket_vehicle_value" />
</androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_create_ticket_vehicle"
        android:id="@+id/cl_create_ticket_category"
        >
    <io.lattis.operator.presentation.customview.CustomTextView
        android:id="@+id/ct_create_ticket_category_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/category"
        android:textSize="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        custom:typefaceAsset="GothamSSm-Medium.otf" />
    <io.lattis.operator.presentation.customview.CustomTextView
        android:id="@+id/ct_create_ticket_category_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/vehicle_box_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        custom:typefaceAsset="GothamSSm-Bold.otf" />
    <View
        android:id="@+id/divider_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/vehicle_box_divider"
        custom:layout_constraintTop_toBottomOf="@+id/ct_create_ticket_category_value" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_create_ticket_category"
        android:id="@+id/cl_create_ticket_notes"
        >
    <io.lattis.operator.presentation.customview.CustomTextView
        android:id="@+id/ct_create_ticket_notes_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notes"
        android:textSize="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        custom:typefaceAsset="GothamSSm-Medium.otf" />
    <io.lattis.operator.presentation.customview.CustomTextView
        android:id="@+id/ct_create_ticket_notes_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:textColor="@color/vehicle_box_text"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/ct_create_ticket_notes_label"
        custom:typefaceAsset="GothamSSm-Bold.otf" />
    <View
        android:id="@+id/divider_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/vehicle_box_divider"
        custom:layout_constraintTop_toBottomOf="@+id/ct_create_ticket_notes_value" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_create_ticket_notes"
        android:id="@+id/cl_create_ticket_assignee"
        >
    <io.lattis.operator.presentation.customview.CustomTextView
        android:id="@+id/ct_create_ticket_assignee_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/assignee"
        android:textSize="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        custom:typefaceAsset="GothamSSm-Medium.otf" />
    <io.lattis.operator.presentation.customview.CustomTextView
        android:id="@+id/ct_create_ticket_assignee_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/vehicle_box_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        custom:typefaceAsset="GothamSSm-Bold.otf" />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <io.lattis.operator.presentation.customview.CustomButton
        android:id="@+id/btn_create_ticket_in_create_ticket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/create_ticket"
        android:textSize="16dp"
        android:textAllCaps="false"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/round_create_ticket"
        android:textColor="@color/create_ticket_text"
        custom:typefaceAsset="GothamSSm-Medium.otf" />

</androidx.constraintlayout.widget.ConstraintLayout>