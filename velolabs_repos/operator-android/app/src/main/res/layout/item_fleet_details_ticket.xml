<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/iv_ticket_image_in_fleet_details_ticket"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toEndOf="@+id/iv_ticket_image_in_fleet_details_ticket"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/cl_ticket_details_in_fleet_details_ticket"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <io.lattis.operator.presentation.customview.CustomTextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="5dp"
            android:id="@+id/ct_ticket_name_in_fleet_details_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/home_fleet_title_text"
            app:typefaceAsset="GothamSSm-Book.otf"
            />

        <io.lattis.operator.presentation.customview.CustomTextView
            app:layout_constraintTop_toBottomOf="@+id/ct_ticket_name_in_fleet_details_ticket"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="5dp"
            android:id="@+id/ct_ticket_category_in_fleet_details_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            app:typefaceAsset="GothamSSm-Book.otf"
            />


        <io.lattis.operator.presentation.customview.CustomTextView
            app:layout_constraintTop_toBottomOf="@+id/ct_ticket_category_in_fleet_details_ticket"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/ct_ticket_date_in_fleet_details_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            app:typefaceAsset="GothamSSm-Book.otf"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:id="@+id/divider_in_fleet_details_ticket"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/home_fleet_in_divider"
        app:layout_constraintTop_toBottomOf="@+id/cl_ticket_details_in_fleet_details_ticket" />



</androidx.constraintlayout.widget.ConstraintLayout>