<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/filter_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:id="@+id/iv_filter_in_vehicle_detail_ticket"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_filter_in_vehicle_detail_ticket"
        app:layout_constraintBottom_toTopOf="@id/btn_create_ticket_vehicle_detail_ticket"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        tools:listitem="@layout/item_fleet_details_ticket"
        android:id="@+id/rv_tickets_in_vehicle_detail_ticket"/>


    <io.lattis.operator.presentation.customview.CustomButton
        android:id="@+id/btn_create_ticket_vehicle_detail_ticket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/create_ticket"
        android:textSize="16dp"
        android:textAllCaps="false"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/round_create_ticket"
        android:textColor="@color/create_ticket_text"
        custom:typefaceAsset="GothamSSm-Medium.otf" />



    <include layout="@layout/activity_loading" android:id="@+id/fragment_vehicle_detail_ticket_loading"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>